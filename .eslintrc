{
    "root": true,
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "browser": true,
        "es6": true 
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "node_modules"
    ],
    "rules": {
        "indent": ["error", 4, {
            "SwitchCase": 1,
            "MemberExpression": "off"
        }],
        "no-console": "warn",
        "no-empty": "off",
        "no-unused-vars": ["warn", {
            "argsIgnorePattern": "^_"
        }],
        "object-curly-spacing": ["warn", "always", {"objectsInObjects": false, "arraysInObjects": true}],
        "semi": ["warn", "always", { "omitLastInOneLineBlock": true }],
        "prefer-template": "warn"
    }
}
